<?xml version="1.0" encoding="UTF-8"?>
<esdl:EnergySystem
    xmi:version="2.0"
    xmlns:xmi="http://www.omg.org/XMI"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:esdl="http://www.tno.nl/esdl"
    xsi:schemaLocation="http://www.tno.nl/esdl esdl.ecore">
  <sector>GEBOUWDE_OMGEVING</sector>
  <sector>INDUSTRIE</sector>
  <measures>
    <items xsi:type="esdl:GeothermalSource"/>
  </measures>
  <instance
      id=""
      detailLevel="BUILDING">
    <area id="area1"
        name="Area_with_three_buildings"
        scope="STREET"
        type="BUILT"
        potentials="//@potentials/@potential.0">
      <asset
          xsi:type="esdl:Building"
          name="SimpleHouseWithGasHeater"
          roofType="SLANTEDROOF">
        <buildingUnits>
          <asset
              xsi:type="esdl:ElectricityDemand"
              id="Baseload"
              name="Baseload Electricity">
            <port
                xsi:type="esdl:InEPort"
                id="InED"
                connectedToOut="OutEC"/>
          </asset>
          <asset
              xsi:type="esdl:GasHeater"
              name="GH">
            <port
                xsi:type="esdl:InGPort"
                id="InGH"
                connectedToOut="OutGC"/>
            <port
                xsi:type="esdl:OutHPort"
                id="OutGH"
                connectedToIn="InHD"/>
          </asset>
          <asset
              xsi:type="esdl:HeatDemand"
              name="Baseload Heat">
            <port
                xsi:type="esdl:InHPort"
                id="InHD"
                connectedToOut="OutGH"/>
          </asset>
          <asset
              xsi:type="esdl:EConnection">
            <port
                xsi:type="esdl:InEPort"
                id="EConnBuilding"/>
            <port
                xsi:type="esdl:OutEPort"
                id="OutEC"
                connectedToIn="InED"/>
            <port
                xsi:type="esdl:InEPort"
                id="InPV"
                connectedToOut="OutPV"/>
          </asset>
          <asset
              xsi:type="esdl:GConnection">
            <port
                xsi:type="esdl:InGPort"
                commodity="GAS"
                id="GConnBuilding"/>
            <port
                xsi:type="esdl:OutGPort"
                id="OutGC"
                connectedToIn="InGH"/>
          </asset>
          <asset
              xsi:type="esdl:PVPanel">
            <port
                xsi:type="esdl:OutEPort"
                id="OutPV"
                connectedToIn="InPV"/>
          </asset>
        </buildingUnits>
      </asset>
      <asset
          xsi:type="esdl:Building"
          name="BuildingWithTwoBuildingUnits">
        <buildingUnits
            name="GroundFloorShop"
            type="SHOPPING"/>
        <buildingUnits
            name="FirstFloorAppartment"
            type="RESIDENTIAL"/>
      </asset>
      <asset
          xsi:type="esdl:Building"
          name="AppartmentComplex"
          roofType="FLATROOF">
        <buildingUnits
            name="Appartment1A"
            type="RESIDENTIAL"/>
        <buildingUnits
            name="Appartment2C"
            type="RESIDENTIAL"/>
        <buildingUnits
            name="Appartment2A"
            type="RESIDENTIAL"/>
        <buildingUnits
            name="Appartment1C"
            type="RESIDENTIAL"/>
        <buildingUnits
            name="Appartment1B"
            type="RESIDENTIAL"/>
      </asset>
    </area>
  </instance>
  <potentials>
    <potential
        xsi:type="esdl:GeothermalPotential"
        areas="//@instance.0/@area"
        id=""/>
  </potentials>
</esdl:EnergySystem>
