<?xml version="1.0" encoding="UTF-8"?>
<esdl:EnergySystem
    xmi:version="2.0"
    xmlns:xmi="http://www.omg.org/XMI"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:esdl="http://www.tno.nl/esdl"
    xsi:schemaLocation="http://www.tno.nl/esdl esdl.ecore">
  <area>
    <item xsi:type="esdl:Building"
        name="SimpleHouseWithGasHeater"
        roofType="SLANTEDROOF">
      <item
          xsi:type="esdl:BuildingUnit"
          type="RESIDENTIAL">
        <item
            xsi:type="esdl:ElectricityDemand"
            id="Baseload"
            name="Baseload Electricity">
          <port
              xsi:type="esdl:InEPort"
              id="InED"
              connectedToOut="OutEC"/>
        </item>
        <item
            xsi:type="esdl:GasHeater"
            name="GH">
          <port
              xsi:type="esdl:InGPort"
              id="InGH"
              connectedToOut="OutHC"/>
          <port
              xsi:type="esdl:OutHPort"
              id="OutGH"
              connectedToIn="InHD"/>
        </item>
        <item
            xsi:type="esdl:HeatDemand"
            name="Baseload Heat">
          <port
              xsi:type="esdl:InHPort"
              id="InHD"
              connectedToOut="OutGH"/>
        </item>
        <item
            xsi:type="esdl:EConnection">
          <port
              xsi:type="esdl:InEPort"
              id="EConnBuilding"/>
          <port
              xsi:type="esdl:OutEPort"
              id="OutEC"
              connectedToIn="InED"/>
        </item>
        <item
            xsi:type="esdl:HConnection">
          <port
              xsi:type="esdl:InHPort"
              id="HConnBuilding"/>
          <port
              xsi:type="esdl:OutHPort"
              id="OutHC"
              connectedToIn="InGH"/>
          <port
              xsi:type="esdl:InEPort"
              id="InPV"
              connectedToOut="OutPV"/>
        </item>
        <item
            xsi:type="esdl:PVPanel">
          <port
              xsi:type="esdl:OutEPort"
              id="OutPV"
              connectedToIn="InPV"/>
        </item>
      </item>
    </item>
    <item xsi:type="esdl:Building"
        name="BuildingWithTwoBuildingUnits">
      <item
          xsi:type="esdl:BuildingUnit"
          name="GroundFloorShop"
          type="SHOPPING"/>
      <item
          xsi:type="esdl:BuildingUnit"
          name="FirstFloorAppartment"
          type="RESIDENTIAL"/>
    </item>
    <item xsi:type="esdl:Building"
        name="AppartmentComplex"
        roofType="FLATROOF">
      <item
          xsi:type="esdl:BuildingUnit"
          name="Appartment1A"
          type="RESIDENTIAL"/>
      <item
          xsi:type="esdl:BuildingUnit"
          name="Appartment1B"
          type="RESIDENTIAL"/>
      <item
          xsi:type="esdl:BuildingUnit"
          name="Appartment1C"
          type="RESIDENTIAL"/>
      <item
          xsi:type="esdl:BuildingUnit"
          name="Appartment2A"
          type="RESIDENTIAL"/>
      <item
          xsi:type="esdl:BuildingUnit"
          name="Appartment2C"
          type="RESIDENTIAL"/>
    </item>
  </area>
</esdl:EnergySystem>
