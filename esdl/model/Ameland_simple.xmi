<?xml version="1.0" encoding="UTF-8"?>
<esdl:EnergySystem
    xmi:version="2.0"
    xmlns:xmi="http://www.omg.org/XMI"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:esdl="http://www.tno.nl/esdl"
    xsi:schemaLocation="http://www.tno.nl/esdl esdl.ecore"
    id="ES1">
  <asset xsi:type="esdl:Area"
      id="Ameland1"
      name="The Simple Island of Ameland"
      areaType="MUNICIPALITY"
      aggrLevel="MUNICIPALITY"
      numberOfInhabitants="4000">
    <asset xsi:type="esdl:WindTurbine"
        id="WindTurbine1"
        name="Wind Parc">
      <ports
          xsi:type="esdl:OutPort"
          connectedTo="IP_for_Windturbines"
          id="WindTurbine1OP">
        <profile
            start="2015-01-01T00:00:00.000+0100"
            profileRef="influxdb://app-iot03.hex.tno.nl/ameland2015/Wind">
          <profileItem
              value="1.0E13"/>
          <duration
              value="1.0"
              durarionUnit="YEAR"/>
        </profile>
      </ports>
    </asset>
    <asset xsi:type="esdl:ElectricityNetwork"
        id="MV_Network"
        name="MV Network">
      <ports
          xsi:type="esdl:InPort"
          connectedTo="WindTurbine1OP"
          id="IP_for_Windturbines"/>
      <ports
          xsi:type="esdl:OutPort"
          connectedTo="IP_for_MV_network"
          id="OP_for_LV_network"/>
      <ports
          xsi:type="esdl:InPort"
          connectedTo="PVParc1OP"
          id="IP_for_PVParc"/>
      <ports
          xsi:type="esdl:OutPort"
          connectedTo="BoorEilandIP"
          id="OP_for_BoorEiland"/>
      <ports
          xsi:type="esdl:InPort"
          connectedTo="ML1OP"
          id="IP_for_ML"/>
    </asset>
    <asset xsi:type="esdl:ElectricityNetwork"
        id="LV_Network"
        name="LV Network">
      <ports
          xsi:type="esdl:InPort"
          connectedTo="OP_for_LV_network"
          id="IP_for_MV_network"/>
      <ports
          xsi:type="esdl:OutPort"
          connectedTo="ResTourBL1IP"
          id="OP_for_ResTour"/>
    </asset>
    <asset xsi:type="esdl:PVParc"
        id="PVParc1"
        name="Solar Parc">
      <ports
          xsi:type="esdl:OutPort"
          connectedTo="IP_for_PVParc"
          id="PVParc1OP">
        <profile
            start="2015-01-01T00:00:00.000+0100"
            profileRef="influxdb://app-iot03.hex.tno.nl/ameland2015/Sun">
          <profileItem
              value="2.0E13"/>
          <duration
              value="1.0"
              durarionUnit="YEAR"/>
        </profile>
      </ports>
    </asset>
    <asset xsi:type="esdl:GenericConsumer"
        id="BoorEiland1"
        name="NAM Drilling platform">
      <ports
          xsi:type="esdl:InPort"
          connectedTo="OP_for_BoorEiland"
          id="BoorEilandIP">
        <profile
            start="2015-01-01T00:00:00.000+0100"
            profileRef="influxdb://app-iot03.hex.tno.nl/ameland2015/BoorEiland">
          <profileItem
              value="1.89E14"/>
          <duration
              value="1.0"
              durarionUnit="YEAR"/>
        </profile>
      </ports>
    </asset>
    <asset xsi:type="esdl:AggregatedConsumer"
        id="ResTourBaseload1"
        name="Residents and Tourists Baseload">
      <ports
          xsi:type="esdl:InPort"
          connectedTo="OP_for_ResTour"
          id="ResTourBL1IP">
        <profile
            start="2015-01-01T00:00:00.000+0100"
            profileRef="influxdb://app-iot03.hex.tno.nl/ameland2015/Edemand">
          <profileItem
              value="8.0E13"/>
          <duration
              value="1.0"
              durarionUnit="YEAR"/>
        </profile>
      </ports>
    </asset>
    <asset xsi:type="esdl:GenericProducer"
        id="MainLand1"
        name="Mainland Connection">
      <ports
          xsi:type="esdl:OutPort"
          connectedTo="IP_for_ML"
          id="ML1OP"/>
    </asset>
  </asset>
</esdl:EnergySystem>
